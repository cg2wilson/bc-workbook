        <example>
            <statement>
                <p>
                    The population of a town in selected years is given below.
                </p>
                <tabular>
                    <row>
                        <cell halign="center">Year</cell>
                        <cell halign="center">2005</cell>
                        <cell halign="center">2006</cell>
                        <cell halign="center">2007</cell>
                        <cell halign="center">2008</cell>
